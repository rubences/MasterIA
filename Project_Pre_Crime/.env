# Configuración del Proyecto Pre-Crime

# Base de datos Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Configuración de directorios
MODEL_PATH=./models
DATA_PATH=./data
LOG_PATH=./logs

# Configuración del grafo
NUM_NODES=100
NUM_EDGES=300
NUM_FEATURES=16
HIDDEN_DIM=64

# Configuración de entrenamiento
BATCH_SIZE=32
EPOCHS=100
LEARNING_RATE_G=0.001
LEARNING_RATE_D=0.001
DEVICE=cuda

# Datos
USE_REAL_DATA=false  # Cambia a true después de ejecutar city_generator.py y data_hydrator.py

# Exportación
EXPORT_TO_NEO4J=false
